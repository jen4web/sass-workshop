\b \cf0 Mixin
\b0 :\
\
@mixin floatme ($float) \{\
  float: $float;\
  @if $float == right \{\
    margin: 0 0 $standard-space $standard-space;\
  \}\
  @if $float == left \{\
    margin: 0 $standard-space $standard-space 0;\
  \}\
\}\

\b Implementation
\b0 :\
